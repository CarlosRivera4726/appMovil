<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--Titulo-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="@string/registro"
        android:textSize="150px"
        tools:ignore="PxUsage" />
    <!--Entrada para email-->
    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:layout_marginBottom="275px"
        android:hint="@string/email"
        tools:ignore="Autofill,PxUsage"
        android:textSize="50dp"/>


    <!--Entrada para password!-->
    <EditText
        android:textSize="50dp"
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:layout_marginTop="-110px"
        android:hint="@string/password"
        tools:ignore="Autofill" />
    <!--Entrada para password confirmacion!-->
    <EditText
        android:textSize="50dp"
        android:id="@+id/PasswordConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:layout_marginTop="25px"
        android:hint="@string/password_confirm"
        tools:ignore="Autofill" />
    <!--Entrada para nÃºmero!-->
    <EditText
        android:textSize="50dp"
        android:id="@+id/Numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_gravity="center"
        android:layout_marginTop="180px"
        android:hint="@string/number"
        tools:ignore="Autofill,PxUsage" />
    <!--Boton para registrar-->
    <Button
        android:id="@+id/registrarse"
        android:layout_width="430dp"
        android:layout_height="146dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="195dp"
        android:background="@drawable/button_rounded"
        android:onClick="registroUsuarios"
        android:text="@string/registrarse"
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/goBack1"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/go_back"
        android:onClick="irAtras"
        android:src="@drawable/goback" />

</FrameLayout>